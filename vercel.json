{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/prerender.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/api/sitemap" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/src/(.*)", "destination": "/src/$1" },
    { "source": "/", "destination": "/api/prerender?path=/" },
    { "source": "/index.html", "destination": "/api/prerender?path=/" },
    { "source": "/intro", "destination": "/api/prerender?path=/intro" },
    { "source": "/Top-Explore-Questions/:slug", "destination": "/api/prerender?path=/Top-Explore-Questions/:slug" },
    { "source": "/Top-Roth-Conversion-Retirement-Questions/:slug", "destination": "/api/prerender?path=/Top-Roth-Conversion-Retirement-Questions/:slug" },
    { "source": "/Top-Financial-Planning-Questions/:slug", "destination": "/api/prerender?path=/Top-Financial-Planning-Questions/:slug" },
    { "source": "/Top-Medicare-Questions/:slug", "destination": "/api/prerender?path=/Top-Medicare-Questions/:slug" },
    { "source": "/Persona/:slug", "destination": "/api/prerender?path=/Persona/:slug" },
    { "source": "/((?!api|assets|src).*)", "destination": "/api/prerender?path=/$1" }
  ]
}